<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ColorCircle="http://schemas.android.com/apk/com.devadvance.ColorPicker"
    android:id="@+id/activity_add_function"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.logangalloisext.Neopixel.addFunctionActivity">

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose a function :" />

    <Spinner
        android:id="@+id/spinnerFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text0"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerFunction"
        android:layout_centerHorizontal="true"
        android:text="Choose a color :" />

    <com.devadvance.ColorPicker.ColorCircle
        android:id="@+id/ColorCircleFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:id="@+id/luminosity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorCircleFunction" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/luminosity"
        android:layout_centerHorizontal="true"
        android:text="Choose a delay :" />

    <EditText
        android:id="@+id/DelayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text2"
        android:text="20"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Cancel" />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Ok" />

</RelativeLayout>
